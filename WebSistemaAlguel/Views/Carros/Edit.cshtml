@model WebSistemaAlguel.Models.Carro

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Carro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="cod_carro" />
            <div class="form-group">
                <label asp-for="modelo_carro" class="control-label"></label>
                <input asp-for="modelo_carro" class="form-control" />
                <span asp-validation-for="modelo_carro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor_carro" class="control-label"></label>
                <input asp-for="valor_carro" class="form-control" />
                <span asp-validation-for="valor_carro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ano_carro" class="control-label"></label>
                <input asp-for="ano_carro" class="form-control" />
                <span asp-validation-for="ano_carro" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="alugado_carro" /> @Html.DisplayNameFor(model => model.alugado_carro)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="cod_fabricante" class="control-label"></label>
                <select asp-for="cod_fabricante" class="form-control" asp-items="ViewBag.cod_fabricante"></select>
                <span asp-validation-for="cod_fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
